# 配置应用名称
spring:
  application:
    name: gateway-zuul
server:
  port: ${port}
# Eureka注册中心配置
eureka:
  client:
    service-url:
      defaultZone: ${eureka.server}
  instance:
    hostname: localhost
    prefer-ip-address: true
    # 自定义Eureka名称
    instance-id: ${spring.application.name}:${spring.application.instance_id:${server.port}}
zuul:
  routes:
    users: 
      path: /user-path/**
      serviceId:  provider-user
ribbon:
  eureka:
    enabled: false
provider-user: #此名称是微服务的serviceId
  ribbon:
    listOfServers: http://localhost:7900,http://localhost:7901
    